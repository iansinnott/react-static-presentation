@require '../lib/vars.styl'

.page
  composes page from './App.styl'

.container
  composes container from './App.styl'

.siteTitle
  composes siteTitle from './App.styl'

.banner
  background url(./bookshelf.jpg) no-repeat black
  background-size cover
  padding 60px 0

  h1
    color white
    font-weight 600
    margin 0
  p
    font-weight 300
    color white

dark-green = #66a446

.nav
  background green
  i
    display block
    font-size 36px
    margin-bottom spaceline
  a
    display inline-block
    text-align center
    color white
    text-decoration none
    border-bottom 2px solid transparent
    padding 20px
    opacity .8
    &:hover
      opacity 1
  .active
    opacity 1
    background dark-green

