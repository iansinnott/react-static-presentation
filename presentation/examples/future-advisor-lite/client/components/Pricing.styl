@require '../lib/vars.styl'

.Pricing
  display block

.page
  composes page from './App.styl'

.container
  composes container from './App.styl'

.siteTitle
  composes siteTitle from './App.styl'

.banner
  background url(./couple.jpg) no-repeat black
  background-size cover
  padding 110px 0

  h1
    color white
    font-weight 100
    margin 0
  p
    font-weight 300
    color white

.nav
  border-bottom 1px solid #ddd
  background #ebebeb
  i
    display block
    font-size 36px
    margin-bottom spaceline
  a
    display inline-block
    text-align center
    color #999
    text-decoration none
    border-bottom 2px solid transparent
    padding 20px
    &:hover
      color black
      i
        color green
  .active
    color black
    border-color green
    i
      color green

